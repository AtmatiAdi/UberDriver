 *      Author: atmat
 */
static SPI_HandleTypeDef DRV_spi;

void DRV_Init(SPI_HandleTypeDef hspi){
	//Copy SPI handle variable
	memcpy(&DRV_spi, &hspi, sizeof(hspi));
}

uint8_t* DRV_Read(uint8_t *addr){
	uint8_t data[2];
	HAL_SPI_TransmitReceive_DMA(DRV_spi, addr, data, 2, 100);
	return data;
}

void DRV_Write(uint16_t addr, uint16_t data){

}
